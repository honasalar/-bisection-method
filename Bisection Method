        "def f(x):\n",
        "    return x**3 - 2*x - 5  # Unique equation\n",
        "\n",
        "def bisection(a, b, tol=1e-6, max_iter=50):\n",
        "    if f(a)*f(b) >= 0:\n",
        "        print(\"Invalid interval\")\n",
        "        return None\n",
        "\n",
        "    for i in range(max_iter):\n",
        "        mid = (a + b) / 2\n",
        "        if abs(f(mid)) < tol:\n",
        "            return mid\n",
        "\n",
        "        if f(a)*f(mid) < 0:\n",
        "            b = mid\n",
        "        else:\n",
        "            a = mid\n",
        "\n",
        "    return mid\n",
        "\n",
        "root = bisection(1, 3)\n",
        "print(\"Root ≈\", root)"
      ]
    }
  ]
